<!DOCTYPE html>
<html>
  <head>
  	<% include ./partials/head %>
  </head>
  <body>
  	<header>
  		<% include ./partials/header %>
  	</header>
    <h1 class='center'>Singularity Generator</h1>
    <hr />
    <div class='row'>
     <div class='col s12 m4'>
       <h3>Add Robots</h3>
       <form action='/robots' method='post'>
         <input type='text' name='name' placeholder='name' />
         <button class='btn btn-waves' type='submit'>Automate</button>
       </form>
     </div>
     <table class='table col m8 s12'>
       <thead>
         <th>Name of Robot</th>
         <th>Delete</th>
       </thead>
       <tbody>
         <% robots.forEach( function(robot) { %>
           <% var href='/robots/delete/' + robot %>
           <tr>
             <td><%= robot %></td>
             <td><a href=<%= href %> + <%= robot %>>Delete</a></td>
         <% }); %>
       </tbody>
     </table>
  </body>
</html>
